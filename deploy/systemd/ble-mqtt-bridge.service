[Unit]
Description=Sagrada BLE to MQTT Bridge
After=network.target bluetooth.target mosquitto.service
Wants=mosquitto.service

[Service]
Type=simple
User=peterbutler
WorkingDirectory=/home/peterbutler/sagrada
ExecStart=/home/peterbutler/sagrada/venv/bin/python scripts/run_ble_bridge.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
