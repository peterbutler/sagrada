[Unit]
Description=Sagrada Climate Display Monitor
After=network.target mariadb.service

[Service]
Type=simple
User=peterbutler
WorkingDirectory=/home/peterbutler/sagrada
Environment=CLIMATE_ENV=sagrada
StandardOutput=tty
StandardInput=tty
TTYPath=/dev/tty1
ExecStart=/home/peterbutler/sagrada/venv/bin/python scripts/run_display.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
